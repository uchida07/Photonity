<div>
  <h1>投稿詳細画面</h1>
  <div>
    <p>
      <% if @post.member.profile_image.attached? %>
        <%= image_tag @post.member.profile_image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </p>
    <p><%= @post.member.account_name %></p>
  </div>
  <div>
    <p><%= link_to "返信・コメントをする" %></p>
  </div>
  <div>
    <p><%= image_tag @post.image, size: "300x225" %></p>
  </div>
  <div>
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @post.title %></td>
      </tr>
      <tr>
        <th>使用機械</th>
        <td><%= @post.machine %></td>
      </tr>
      <tr>
        <th>内容</th>
        <td><%= @post.introduction %></td>
      </tr>
    </table>

  </div>
</div>