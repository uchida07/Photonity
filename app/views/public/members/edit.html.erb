<div class = "container">
  <div class = "pt-5">
    <div class = "text-center">
      <h1>プロフィール編集画面</h1>
      <div class="pt-3">
        <%= form_with model: @member do |f| %>
          <div>
            <div>プロフィール画像</div>
            <div class="pl-5"><%= f.file_field :profile_image,accept: "image/*" %></div>
          </div>
          <div class="pt-3">
            <div>アカウント名</div>
            <div><%= f.text_field :account_name %></div>
          </div>
          <div class="pt-3">
            <div>Email</div>
            <div><%= f.text_field :email %></div>
          </div class="pt-3">
          <div class="pt-3">
            <div>自己紹介文</div>
            <div><%= f.text_area :introduction %></div>
          </div>
          <%= f.submit "更新" %>
        <% end %>
      </div>
    </div>
  </div>
</div>