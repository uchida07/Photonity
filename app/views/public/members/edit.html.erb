<div>
  <h1>プロフィール編集画面</h1>
    <%= form_with model: @member do |f| %>
    <table>
      <tr>
        <th>プロフィール画像</th>
        <th><%= f.file_field :profile_image,accept: "image/*" %></th>
      </tr>
      <tr>
        <th>アカウント名</th>
        <th><%= f.text_field :account_name %></th>
      </tr>
      <tr>
        <th>Email</th>
        <th><%= f.text_field :email %></th>
      </tr>
      <tr>
        <th>自己紹介文</th>
        <th><%= f.text_area :introduction %></th>
      </tr>
      </table>
      <%= f.submit "更新" %>
    <% end %>

</div>